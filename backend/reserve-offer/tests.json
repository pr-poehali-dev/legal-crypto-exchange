{
  "tests": [
    {
      "name": "Reserve offer returns 404 for non-existent offer",
      "method": "POST",
      "path": "/",
      "body": {
        "offer_id": 99999,
        "slot_time": "14:00",
        "user_id": 2,
        "username": "TestUser",
        "meeting_office": "Москва, ул. Арбат, 10"
      },
      "expectedStatus": 404,
      "expectedBody": {
        "success": false,
        "error": "Offer not found or not active"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "offer_id": 1
      },
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}