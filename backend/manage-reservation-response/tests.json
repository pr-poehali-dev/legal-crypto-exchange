{
  "tests": [
    {
      "name": "Accept non-existent reservation returns 404",
      "method": "POST",
      "body": {
        "reservation_id": 99999,
        "action": "accept"
      },
      "expectedStatus": 404,
      "expectedBody": {
        "success": false,
        "error": "Reservation not found"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing parameters",
      "method": "POST",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    }
  ]
}