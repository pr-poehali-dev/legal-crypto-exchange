      "method": "POST",
      "path": "/",
      "body": {
        "offer_id": 99999,
        "user_id": 1,
        "offer_type": "buy",
        "amount": 1000,
        "rate": 95.5,
        "meeting_time": "14:00",
        "meeting_time_end": "16:00",
        "city": "Москва",
        "offices": ["Москва, ул. Нефтезаводская, д.9/2, 12 этаж"]
      },
      "expectedStatus": 404,
      "bodyMatcher": "skip"
    },
    {
      "name": "Missing required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "offer_id": 1
      },
      "expectedStatus": 400,
      "bodyMatcher": "skip"
    }
  ]
